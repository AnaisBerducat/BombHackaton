{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Users</h1>
    <ul>
        {% for user in users %}
            <li><a href="/user/show/{{ user.id }}">{{ user.id }}. {{ user.firstname }}</a></li>
        {% else %}
            <li>Nothing to display</li>
        {% endfor %}
    </ul>
    <a href="/user/register">Ajouter</a>
{% endblock %}
