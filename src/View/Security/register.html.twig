{% extends 'layout.html.twig' %}

{% block title %} USER REGISTER {% endblock %}

{% block navbar %}{% include 'Layout/_navbarfront.html.twig' %}{% endblock %}

{% block content %}
<div class="container text-center">
	<div class="register mt-5 pb-5">
		<h1 class="">REGISTER</h1>
        <div class="formregister">
            <form method="POST">
        <div class="mt-3 form-group form-style">
            <label for="firstname">FIRSTNAME</label>
            <input type="text" class="form-control" id="firstname" name="firstname">
        </div>
        <div class="mt-3 form-group form-style">
            <label for="lastname">LASTNAME</label>
            <input type="text" class="form-control" id="lastname" name="lastname">
        </div>

        <div class="mt-3 form-group form-style">
            <label for="sex">SEX</label>
            <input type="text" class="form-control" id="sex" name="sex">
        </div>
        <div class="mt-3 form-group form-style">
            <label for="age">AGE</label>
            <input type="number" class="form-control" id="age" name="age" min="1" max="120">
        </div>
        <div class="mt-3 form-group form-style">
            <label for="planet_id">PLANET</label>
            <input type="text" class="form-control" id="planet_id" name="planet_id">
        </div>
        <div class="mt-3 form-group form-style">
            <label for="email">EMAIL</label>
            <input type="email" class="form-control" id="email" name="email">
        </div>
        <div class="mt-3 form-group form-style">
            <label for="password">PASSWORD</label>
            <input type="password" class="form-control" id="password" name="password">
        </div>
        <div class="mt-3 form-group form-style">
            <label for="password2">PASSWORD</label>
            <input type="password" class="form-control" id="password2" name="password2">
        </div>
        
        {% if errors is not empty %}
        <div class="mt-3 alert alert-secondary alert-dismissible fade show">
            {% for error in errors %}
            <p>{{ error }}</p>
            {% endfor %}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        {% endif %}
        <div class="mt-3">
            <button type="submit" class="btn btn-secondary" name="register">VALIDATE</button>
        </div>
        </form>
        </div>
	</div>
</div>
{% endblock %}

